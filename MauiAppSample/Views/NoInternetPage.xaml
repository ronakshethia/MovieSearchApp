<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauiAppSample.Views"
             x:Class="MauiAppSample.Views.NoInternetPage"
             xmlns:viewModel="clr-namespace:MauiAppSample.ViewModels"
             x:TypeArguments="viewModel:NoInternetViewModel"      
             Title="NoInternetPage">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Spacing="20">

        <Image Source="no_internet.png" 
               WidthRequest="150" 
               HeightRequest="150" 
               HorizontalOptions="Center" />

        <Label Text="Oops! No internet connection."
               FontSize="24"
               HorizontalOptions="Center"
                />

        <Label Text="Please check your connection and try again."
               FontSize="14"
               HorizontalOptions="Center"
                />

        <Button Text="Retry" 
                FontSize="16"
                TextColor="White"
                HorizontalOptions="Center"
                 />

    </VerticalStackLayout>
</views:BaseContentPage>